<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:text="@string/lbl_comment_username"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/block_comment_username"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_above="@+id/block_comment_text"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:id="@+id/block_comment_grade"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/block_lbl_comment_grade"
        android:layout_alignBottom="@+id/block_lbl_comment_grade"
        android:layout_toRightOf="@+id/block_lbl_comment_grade"
        android:layout_toEndOf="@+id/block_lbl_comment_grade" />

    <TextView
        android:id="@+id/block_lbl_comment_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_comment_grade"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_above="@+id/block_comment_text"
        android:layout_toRightOf="@+id/block_comment_username"
        android:layout_toEndOf="@+id/block_comment_username" />

    <TextView
        android:id="@+id/block_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
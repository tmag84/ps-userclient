<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/service_subscribers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_ranking"
        android:layout_alignBottom="@+id/label_ranking"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/label_ranking"
        android:layout_toRightOf="@+id/label_ranking"
        android:text="TextView"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/label_subscribers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/service_subscribers"
        android:layout_alignBottom="@+id/service_subscribers"
        android:layout_toEndOf="@+id/service_subscribers"
        android:layout_toRightOf="@+id/service_subscribers"
        android:text="@string/label_subscribers"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/service_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/service_name"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/label_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/service_rank"
        android:layout_alignBottom="@+id/service_rank"
        android:layout_toEndOf="@+id/service_rank"
        android:layout_toRightOf="@+id/service_rank"
        android:text="@string/label_ranking"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_service_subscribe"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:text="Button"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/label_subscribers"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>